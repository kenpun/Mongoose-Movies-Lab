<h2>All the celebrities</h2>
{{#each celebrities}}
    <div>
        <a href="/celebrities/{{_id}}">{{name}}</a>
    
        <form action="/celebrities/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>

        <a href="/celebrities/{{_id}}/edit"><button>Edit</button></a>
    </div>
{{/each}}

<a href="/celebrities/new">Add a celebrity here 👨‍🎤 👩‍🎤</a>